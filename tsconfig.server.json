{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": false,
    "downlevelIteration": true,
    "target": "ES2020",
    "noEmitOnError": false
  },
  "include": ["server/**/*", "shared/schema.ts", "server/types/**/*"],
  "exclude": ["node_modules", "dist", "client", "**/*.test.ts", "**/__tests__/**"],
  "ts-node": {
    "transpileOnly": true
  }
}
