    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist/shared"
  },
  "include": ["shared/schema.ts"]
}

