# Environment Configuration Template
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development
PORT=5000

# Database (Required)
# Get from Neon dashboard: https://neon.tech
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_POOL_SIZE=10

# Neon API Key (Optional - for project management features)
# Get from: https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=

# Security (Required)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# AI APIs (Required)
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-

# Anthropic (Optional)
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Email (Required)
# SendGrid: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.

# Object Storage (Optional - for file uploads)
# Configure if using cloud storage for assets
# PUBLIC_OBJECT_SEARCH_PATHS=
# PRIVATE_OBJECT_DIR=

# Deployment
# Frontend URL for CORS (Required in production)
FRONTEND_URL=https://atomtools.ai

# Feature Flags
HYBRID_SEARCH_ENABLED=false
RERANKING_ENABLED=false

# Observability (Optional)
# LangSmith: https://smith.langchain.com/
LANGCHAIN_API_KEY=
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=atomtools

# Sentry (Optional, recommended for production)
SENTRY_DSN=

# Cohere (Optional, for reranking)
# Cohere: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# Logging
LOG_LEVEL=INFO

# Stripe (If implementing payments)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
